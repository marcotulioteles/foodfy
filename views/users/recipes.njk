{% extends 'users/layout.njk' %}

{% block head %}
    <title>Recipes - Foodfy</title>
{% endblock %}

{% block content %}
    <section class='recipes-section'>
        
        <h2>Recipes</h2>

        <div class='recipes-list'>
            {% for item in items %}
            <div class='recipes'>
                <img src='{{item.image}}' alt='imagem de {{item.title}}'>
                <h3>{{item.title}}</h3>
                <p>{{item.author}}</p>
            </div>
            {% endfor %}
        </div>
    </section>   

    <script src='/scripts.js'></script>
{% endblock %}

