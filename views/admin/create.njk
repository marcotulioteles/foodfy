{% extends 'admin/layout.njk'%}

{% block head %}
    <title>Foodfy/Admin - Create Recipe</title>
{% endblock%}

{% block content %}
    <form class="create-recipes" method="POST" action="/admin/recipes">
      
        <div class="create-recipe-head-menu">
            <h1>Creating a new recipe</h1>
            <button type="submit" class="btn-create">Create recipe</button>
        </div>

            <p>Recipe image</p>
                <input 
                    type="url" 
                    name="image" 
                    placeholder="http://"
                >
            <div class="author-and-title-create">
                <div>
                    <p>Title</p>
                        <input 
                            class="recipe-title-input"
                            type="text" 
                            name="title" 
                            placeholder="title"
                        >
                </div>
                <div>
                    <p>Author</p>
                        <input
                            class="recipe-author-input" 
                            type="text" 
                            name="author" 
                            placeholder="author"
                        >
                </div>    
            </div>

            <p>Ingredients</p>
            <div id="ingredients">
                    <div class="ingredient">
                        <input 
                            type="text" 
                            name="ingredients[]" 
                            placeholder="ingredient"
                        >
                    </div>
            </div>
            <button type="button" class="add-ingredient">Add new ingredient</button>
            
            <p>Preparation mode</p>
            <div id="preparations">
                    <div class="preparation">
                        <input 
                            type="text" 
                            name="preparation[]" 
                            placeholder="preparation"
                        >
                    </div>
            </div>
            <button type="button" class="add-preparation">Add new preparation</button>
            <p>Additional information</p>
            <textarea 
                name="information" 
                id="" 
                cols="30" 
                rows="10"
                placeholder="Additional information"
                wrap="hard"
            ></textarea>
    </form>
    <script src="/scripts.js"></script>                    
{% endblock%}
